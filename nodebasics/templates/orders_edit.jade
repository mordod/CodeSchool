extends layout
block title	
	title Edit Order ##{id}
block content
	h1 Edit Order ##{id}
	a(href='/orders/' + id) Back to Order
	form(method="post", action="/orders/" + id + "?_method=PUT")
		p pickup time:
		input(type="datetime-local", name="date", value=order.date)
		br
		p customer name:
		input(type="text", name="name", value=order.name)
		br
		P what you ordered:
		textarea(name="bar")= order.bar
		br
		P your server:
		input(type="text", name="server", value=order.server)
		br
		P what your paying with:
		input(type="text", name="money", value=order.money)
		br
		input(type="submit" value="submit changes")